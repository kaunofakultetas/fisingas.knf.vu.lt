services:


  fisingas-endpoint:
    container_name: fisingas-endpoint
    image: caddy:2-alpine
    read_only: true
    volumes:
      - ./endpoint/Caddyfile:/etc/caddy/Caddyfile
    ports:
      - 80:80
    restart: unless-stopped



  # Push from Docker hub
  fisingas-nextjs:
    container_name: fisingas-nextjs
    image: vuknf/fisingas-nextjs:latest
    restart: unless-stopped

  # # Self build
  # fisingas-nextjs:
  #   container_name: fisingas-nextjs
